<h1>Listing user_messages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_messages.each do |user_message| %>
      <tr>
        <td><%= user_message.name %></td>
        <td><%= user_message.email %></td>
        <td><%= user_message.message %></td>
        <td><%= link_to 'Show', user_message %></td>
        <td><%= link_to 'Edit', edit_user_message_path(user_message) %></td>
        <td><%= link_to 'Destroy', user_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

